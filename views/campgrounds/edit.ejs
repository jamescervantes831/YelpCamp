<% layout('layouts/boilerplate') %>
<div>
    <h1 class="text-center">Edit <%= campground.title %> </h1>
    <form action="/campground/<%= campground._id %>?_method=PUT" method="POST" class="row Validate" novalidate>
        <div class="col-md-4">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div class="col-md-4">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location %>" required>
        </div>
        <div class="col-md-4">
            <label for="price" class="form-label">Price</label>
            <div class="input-group">
                <div class="input-group-text">$</div>
                <input type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>" required>
            </div>
        </div>
        <div class="mb-3 col-md-12">
            <label for="description">Description</label>
            <textarea type="text" class="form-control" id="description" name="campground[description]" required> <%= campground.description %> </textarea>
        </div>
        <div class="mb-3 col-md-12">
            <label for="image">Image</label>
            <input type="url" class="form-control" id="image" name="campground[image]" value="<%= campground.image %>" required>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-primary">Update campground</button>
            <a href="/campground/<%= campground._id %> " class="btn btn-secondary">Back to Campground</a>
        </div>
    </form>
</div>