<% layout('layouts/boilerplate')%>
<h1>Register</h1>
<form action="/register" class="Validate" novalidate method="POST">
    <div>
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="user[email]" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="username" class="form-label">Username</label>
        <input type="text" class="form-control" id="username" name="user[username]" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="user[password]" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <button type="submit" class="btn btn-primary">Create Account</button>
    </div>
</form>